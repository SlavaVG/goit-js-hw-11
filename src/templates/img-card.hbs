{{#each this}}
    <a class="gallery__link" href="{{largeImageURL}}">
        <div class="photo-card">
                <img class="gallery__image" src="{{webformatURL}}" alt="tags" loading="lazy" width="350" height="250" />
            <div class="info">
                <p class="info-item">
                    <b>Likes</b> 
                    {{likes}}
                </p>
                <p class="info-item">
                    <b>Views</b>
                    {{views}}
                </p>
                <p class="info-item">
                    <b>Comments</b>
                    {{comments}}
                </p>
                <p class="info-item">
                    <b>Downloads</b>
                    {{downloads}}
                </p>
            </div>
        </div>
    </a>
{{/each}}